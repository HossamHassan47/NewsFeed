<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_elevation"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Image-->
            <ImageView
                android:id="@+id/image_view_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thumbnail_height"
                android:scaleType="fitXY" />

            <!--Title-->
            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_title_background"
                android:paddingBottom="@dimen/txt_title_margin_vertical"
                android:paddingLeft="@dimen/txt_title_margin_horizontal"
                android:paddingRight="@dimen/txt_title_margin_horizontal"
                android:paddingTop="@dimen/txt_title_margin_vertical"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/txt_title_text_size" />

            <!--Trial Text-->
            <TextView
                android:id="@+id/text_view_trial_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_description_background"
                android:paddingBottom="@dimen/txt_title_margin_vertical"
                android:paddingLeft="@dimen/txt_title_margin_horizontal"
                android:paddingRight="@dimen/txt_title_margin_horizontal"
                android:paddingTop="@dimen/txt_title_margin_vertical"
                android:textSize="@dimen/txt_description_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_section_background"
                android:paddingTop="@dimen/txt_title_margin_vertical"
                android:paddingBottom="@dimen/txt_title_margin_vertical"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--Section Name-->
                <TextView
                    android:id="@+id/text_view_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="@dimen/txt_title_margin_horizontal"
                    android:paddingRight="@dimen/txt_title_margin_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/txt_section_text_size" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <!--Contributor-->
                    <TextView
                        android:id="@+id/text_view_contributor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="@dimen/txt_title_margin_horizontal"
                        android:paddingRight="@dimen/txt_title_margin_horizontal"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/txt_section_text_size" />

                    <!--Date-->
                    <TextView
                        android:id="@+id/text_view_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="@dimen/txt_title_margin_horizontal"
                        android:paddingRight="@dimen/txt_title_margin_horizontal"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/txt_section_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
