<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_news">
        <ListPreference
            android:defaultValue="@string/section_default_value"
            android:entries="@array/default_section"
            android:entryValues="@array/default_section_values"
            android:key="@string/key_default_section"
            android:title="@string/title_default_section" />

        <ListPreference
            android:defaultValue="@string/star_rating_default_value"
            android:entries="@array/star_rating"
            android:entryValues="@array/star_rating_values"
            android:key="@string/key_star_rating"
            android:title="@string/title_star_rating" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_ordering">
        <ListPreference
            android:defaultValue="@string/order_by_default_value"
            android:entries="@array/order_by"
            android:entryValues="@array/order_by_values"
            android:key="@string/key_order_by"
            android:title="@string/title_order_by" />

        <ListPreference
            android:defaultValue="@string/order_date_default_value"
            android:entries="@array/order_date"
            android:entryValues="@array/order_date_values"
            android:key="@string/key_order_date"
            android:title="@string/title_order_date" />
    </PreferenceCategory>

</PreferenceScreen>